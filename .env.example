# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General

VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Optional: Firebase Emulator Configuration (for local development)
VITE_USE_FIREBASE_EMULATOR=false
VITE_FIRESTORE_EMULATOR_HOST=localhost
VITE_FIRESTORE_EMULATOR_PORT=8080

# ============================================================================
# Prisma PostgreSQL Database Configuration
# ============================================================================

# Database Connection String
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Example: postgresql://johndoe:randompassword@localhost:5432/agentprep?schema=public
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# Direct URL (for migrations) - can be same as DATABASE_URL
# Use this if you need a different connection for migrations
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# Connection Pool Settings (optional)
# Uncomment and adjust as needed
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10
# DATABASE_TIMEOUT=30000

# ============================================================================
# Database Provider Options
# ============================================================================

# For local development (Docker/localhost)
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/agentprep?schema=public"

# For Prisma Cloud/Accelerate
# DATABASE_URL="prisma://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# For Supabase
# DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?pgbouncer=true"
# DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# For Railway
# DATABASE_URL="postgresql://postgres:PASSWORD@containers-us-west-XX.railway.app:PORT/railway"

# For Neon
# DATABASE_URL="postgresql://USER:PASSWORD@ep-XX-XX-XX.us-east-2.aws.neon.tech/neondb?sslmode=require"

# For Heroku Postgres
# DATABASE_URL="postgresql://USER:PASSWORD@ec2-XX-XX-XX-XX.compute-1.amazonaws.com:5432/DATABASE"

# ============================================================================
# Application Configuration
# ============================================================================

# Node Environment
NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api

# ============================================================================
# LLM Integration Configuration (NEW!)
# ============================================================================

# Enable/disable LLM features globally
# Default: false (disabled by default for safety)
VITE_LLM_ENABLED=false

# Default mode: 'demo' or 'api'
# Demo mode uses mock responses and doesn't require API keys
# Default: demo
VITE_LLM_DEFAULT_MODE=demo

# API Keys (only needed for API mode)
# Get Anthropic API key from: https://console.anthropic.com/
# Get OpenAI API key from: https://platform.openai.com/
VITE_ANTHROPIC_API_KEY=
VITE_OPENAI_API_KEY=

# Optional: Server-side API keys (more secure)
# Use these instead of VITE_ versions for server-side calls
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Optional: Custom LLM endpoint
VITE_CUSTOM_LLM_ENDPOINT=

# Optional: Default models
VITE_DEFAULT_ANTHROPIC_MODEL=claude-sonnet-4-20250514
VITE_DEFAULT_OPENAI_MODEL=gpt-4-turbo-preview

# Optional: Rate limiting
VITE_LLM_RATE_LIMIT_PER_MINUTE=10
VITE_LLM_RATE_LIMIT_PER_HOUR=100

# Optional: Token budgets
VITE_LLM_DAILY_TOKEN_LIMIT=100000
VITE_LLM_MONTHLY_BUDGET_USD=100

# Optional: Caching
VITE_LLM_CACHE_ENABLED=true
VITE_LLM_CACHE_TTL_SECONDS=3600

# Optional: Logging
VITE_LLM_LOG_USAGE=true
VITE_LLM_LOG_TO_DB=false

# Optional: Feature flags for specific processing points
VITE_LLM_ENABLE_PROCESS_STEPS=true
VITE_LLM_ENABLE_DATA_FIELDS=true
VITE_LLM_ENABLE_RULES=true
VITE_LLM_ENABLE_ROI=true
VITE_LLM_ENABLE_COMPLETENESS=true
VITE_LLM_ENABLE_AGENT_PROMPTS=true
VITE_LLM_ENABLE_FLOW_OPTIMIZATION=true
VITE_LLM_ENABLE_TEST_GENERATION=true
