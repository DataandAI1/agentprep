# Firebase Configuration
# Get these values from Firebase Console > Project Settings > General

VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id
VITE_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Optional: Firebase Emulator Configuration (for local development)
VITE_USE_FIREBASE_EMULATOR=false
VITE_FIRESTORE_EMULATOR_HOST=localhost
VITE_FIRESTORE_EMULATOR_PORT=8080

# ============================================================================
# Prisma PostgreSQL Database Configuration
# ============================================================================

# Database Connection String
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
# Example: postgresql://johndoe:randompassword@localhost:5432/agentprep?schema=public
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# Direct URL (for migrations) - can be same as DATABASE_URL
# Use this if you need a different connection for migrations
DIRECT_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# Connection Pool Settings (optional)
# Uncomment and adjust as needed
# DATABASE_POOL_MIN=2
# DATABASE_POOL_MAX=10
# DATABASE_TIMEOUT=30000

# ============================================================================
# Database Provider Options
# ============================================================================

# For local development (Docker/localhost)
# DATABASE_URL="postgresql://postgres:postgres@localhost:5432/agentprep?schema=public"

# For Prisma Cloud/Accelerate
# DATABASE_URL="prisma://accelerate.prisma-data.net/?api_key=YOUR_API_KEY"

# For Supabase
# DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres?pgbouncer=true"
# DIRECT_URL="postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# For Railway
# DATABASE_URL="postgresql://postgres:PASSWORD@containers-us-west-XX.railway.app:PORT/railway"

# For Neon
# DATABASE_URL="postgresql://USER:PASSWORD@ep-XX-XX-XX.us-east-2.aws.neon.tech/neondb?sslmode=require"

# For Heroku Postgres
# DATABASE_URL="postgresql://USER:PASSWORD@ec2-XX-XX-XX-XX.compute-1.amazonaws.com:5432/DATABASE"

# ============================================================================
# Application Configuration
# ============================================================================

# Node Environment
NODE_ENV=development

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api

# Optional: Anthropic API for Claude integration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
